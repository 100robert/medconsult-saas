# ============================================
# API GATEWAY - Variables de entorno
# ============================================

# Puerto del Gateway
PORT=3000
NODE_ENV=development

# Secret para verificar JWT (debe ser el mismo que auth-service)
JWT_SECRET=tu_super_secreto_jwt_cambiar_en_produccion

# URLs de los microservicios
AUTH_SERVICE_URL=http://localhost:3001
USERS_SERVICE_URL=http://localhost:3002
APPOINTMENTS_SERVICE_URL=http://localhost:3003
CONSULTATIONS_SERVICE_URL=http://localhost:3004
PAYMENTS_SERVICE_URL=http://localhost:3005
NOTIFICATIONS_SERVICE_URL=http://localhost:3006
REVIEWS_SERVICE_URL=http://localhost:3007
AUDIT_SERVICE_URL=http://localhost:3008

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:4200
